// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum BookStatus {
  TERSEDIA
  DIPINJAM
}

model Book {
  id          String     @id @default(cuid())
  title       String
  author      String?
  description String?    @db.Text
  pdfPath     String?
  coverPath   String?
  genre       String?
  status      BookStatus @default(TERSEDIA)
  language    String?    
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model DailyVisitor {
  id    String   @id @default(cuid())
  date  DateTime @unique @db.Date
  count Int      @default(1)
}

model Log {
  id        String   @id @default(cuid())
  action    String
  details   String?
  createdAt DateTime @default(now())
}